generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model TimeEntry {
  id          String   @id @default(cuid())
  date        String   // ISO date: "YYYY-MM-DD"
  project     String
  hours       Float
  description String
  createdAt   DateTime @default(now())

  @@index([date])
}
